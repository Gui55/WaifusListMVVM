        <activity android:name=".ui.view.WaifuDetailsActivity" />
        <activity android:name=".ui.view.WaifusListActivity" />
        <activity android:name=".ui.view.UserRegisterActivity" />
        <activity android:name=".ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>